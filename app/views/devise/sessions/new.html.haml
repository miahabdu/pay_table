    .login-wrapper
      %a{href: "index.html"}
        %img.logo{alt: "logo", src: "/assets/logo-white.png"}/
      .box
        .content-wrap
          %h6 Log in
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

            = f.text_field :username, placeholder: "Username", class: "form-control"
            = f.password_field :password, placeholder: "Your Password", class: "form-control"
            - if devise_mapping.rememberable?
              .remember
                = f.check_box :remember_me
                = f.label :remember_me
            = f.submit "Log in", class: "btn-glow primary login"
          
      .no-account
        %p Don't have an account?
        = render "devise/shared/links"

