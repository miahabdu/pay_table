
= form_for(@account, html: { class: 'form-horizontal', role: 'form'}) do |f|
  .form-group
    = f.label :name, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.text_field :name
  .form-group
    = f.label :url, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.text_field :url
  .form-group
    = f.label :due_date, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.text_field :due_date, class: 'datepicker input'
  .form-group
    = f.label :amount_due, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.text_field :amount_due
  .form-group
    = f.label :priority, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.select :priority, [['High', 1], ['Medium', 2], ['Low', 3]], {include_blank: 'Select Priority'} 
  .form-group
    = f.label :category, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.select :category, ['Mortgage/Rent', 'Credit Card', 'Entertainment', 'Insurance', 'Auto Payment', 'Food/Dining', 'Utilities', 'Health/Fitness', 'Loan', 'Groceries'].sort, {include_blank: 'Select Category'}
  .form-group
    = f.label :is_paid, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.check_box :is_paid
  .form-group
    = f.label :is_reoccuring, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.check_box :is_reoccuring
  .form-group
    .col-lg-offset-2.col-lg-4
      = f.submit 'Save', class: 'btn btn-default'